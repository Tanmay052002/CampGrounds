<% layout('layouts/boilerplate.ejs') %>
    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">New Campground</a>
    </div>
        <% for(let camp of camps){ %>
            <div class="card mb-3">
                <div class="row ">
                    <div class="col-md-4">
                        <% if(camp.image.length){ %> 
                            <img class="img-fluid" src="<%= camp.image[0].url %>" alt="">
                        <% }else{ %>
                            <img class="img-fluid" src="https://res.cloudinary.com/dbd2wzwbs/image/upload/v1609214458/YelpCamp/jcjbobjtcbvpo1oc6kab.jpg" alt="">
                        <% } %> 
                        </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %></h5>
                            <p class="card-text"><%= camp.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %></small>
                            </p>
                             
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-success">View <%= camp.title %></a>
                        </div>
                        
                    </div>
                </div>
            </div>
        <% } %> 
        <script>
            const mapBoxtkn='<%- process.env.MAPBOX_TOKEN %>';
            const camps = {features:<%- JSON.stringify(camps) %>};
          </script>
        <script src="/javascripts/clustermap.js"></script>
 
