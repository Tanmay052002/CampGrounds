<% layout('layouts/boilerplate.ejs') %>
<div class="container mt-3 mb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://st.depositphotos.com/1203257/1762/i/600/depositphotos_17623797-stock-photo-the-campground.jpg" alt="" class="card-img-top">   
                <div class="card-body">
                    <h1 class="card-title">Register!!!!</h1>
                        <form action="/register" method="POST" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" name="username" id="username" autofocus required>
                                <div class="valid-feedback">Fine!!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" name="email" id="email" required>
                                <div class="valid-feedback">Fine!!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password" required>
                                <div class="valid-feedback">Fine!!</div>
                            </div>
                            <div class="d-grid">
                                <button class = "btn btn-success">Register!!</button>
                            </div>
                            
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>